templ Register(errorMsg string, email string, name string, csrf string) {
	<article>
		<header>
			<hgroup>
				<h1>ğŸ“ Enlistment Form</h1>
				<h2>Join the Gosmic Code Fleet</h2>
			</hgroup>
		</header>

		if errorMsg != "" {
			<div class="flash error">
				âš ï¸ { errorMsg }
			</div>
		}

		<form method="POST" action="/register">
			<input type="hidden" name="_csrf" value={ csrf }/>
			<label for="name">
				Officer Name
				<input type="text" id="name" name="name" value={ name } required placeholder="Commander Name"/>
			</label>

			<label for="email">
				Comms ID (Email)
				<input type="email" id="email" name="email" value={ email } required placeholder="officer@fleet.com"/>
			</label>

			<label for="password">
				Passcode (min 8 chars)
				<input type="password" id="password" name="password" required minlength="8"/>
			</label>

			<label for="passwordConfirm">
				Confirm Passcode
				<input type="password" id="passwordConfirm" name="passwordConfirm" required/>
			</label>

			<button type="submit" class="primary">Submit Enlistment</button>
		</form>

		<footer>
			<p>Already enlisted? <a href="/login">Verify Identity</a></p>
		</footer>
	</article>
}
